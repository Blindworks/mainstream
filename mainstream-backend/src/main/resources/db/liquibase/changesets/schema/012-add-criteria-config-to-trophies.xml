<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="012-add-criteria-config-to-trophies" author="claude">
        <comment>Add criteriaConfig and checkScope fields to trophies table for flexible, configurable trophy criteria</comment>

        <!-- Add criteriaConfig column for JSON configuration -->
        <addColumn tableName="trophies">
            <column name="criteria_config" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Add checkScope column for trophy check scope -->
        <addColumn tableName="trophies">
            <column name="check_scope" type="VARCHAR(30)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="trophies" columnName="criteria_config"/>
            <dropColumn tableName="trophies" columnName="check_scope"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
