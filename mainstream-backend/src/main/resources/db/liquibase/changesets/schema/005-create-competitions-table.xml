<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="005-create-competitions-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="competitions"/>
            </not>
        </preConditions>

        <comment>Create competitions table for challenges and competitions</comment>

        <createTable tableName="competitions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2000)"/>
            <column name="type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="difficulty" type="VARCHAR(50)"/>
            <column name="start_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="prize_description" type="VARCHAR(1000)"/>
            <column name="rules" type="VARCHAR(2000)"/>
            <column name="max_participants" type="INTEGER"/>
            <column name="icon_url" type="VARCHAR(500)"/>
            <column name="created_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign Key to users (created_by) -->
        <addForeignKeyConstraint
                baseTableName="competitions"
                baseColumnNames="created_by"
                constraintName="fk_competitions_created_by"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="RESTRICT"/>

        <!-- Indexes for performance -->
        <createIndex tableName="competitions" indexName="idx_competition_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="competitions" indexName="idx_competition_dates">
            <column name="start_date"/>
            <column name="end_date"/>
        </createIndex>

        <createIndex tableName="competitions" indexName="idx_competition_type">
            <column name="type"/>
        </createIndex>

        <rollback>
            <dropTable tableName="competitions"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
