<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-predefined-routes-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="predefined_routes"/>
            </not>
        </preConditions>

        <comment>Create predefined_routes table for predefined running routes</comment>

        <createTable tableName="predefined_routes">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="original_filename" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="distance_meters" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="elevation_gain_meters" type="DECIMAL(10,2)"/>
            <column name="elevation_loss_meters" type="DECIMAL(10,2)"/>
            <column name="start_latitude" type="DECIMAL(10,7)"/>
            <column name="start_longitude" type="DECIMAL(10,7)"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="predefined_routes"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
